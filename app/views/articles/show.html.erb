<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<div> <%= link_to "Edit", edit_article_path(@article) %></div>
<div> <%= link_to "Destroy", article_path(@article), data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                                         } %></div>
<h2>Comments</h2>
<%= render @article.comments %>
<h2>Add a Comment:</h2>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
<p>
  <%= form.label :commenter %> <br>
  <%= form.text_field :commenter %>
</p>
<p>
  <%= form.label :body %> <br>
  <%= form.text_area :body %>
</p>
<p>
  <%= form.submit %>
</p>
<% end %>
